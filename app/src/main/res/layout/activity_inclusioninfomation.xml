<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textviewheight"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize"
            android:text="项目名称：" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:text="导弹采购计划"
            android:id="@+id/projectname" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textviewheight"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize"
            android:text="担保金额（万元）"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:text="20"
            android:id="@+id/allmoney" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textviewheight"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize"
            android:text="招标编号："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:text="123123"
            android:id="@+id/serialnumber" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textviewheight"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize"
            android:text="收益人"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:text="张亚龙"
            android:id="@+id/benifperson" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textviewheight"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize"
            android:text="被保证人"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:text="张亚龙"
            android:id="@+id/ensureperson" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textviewheight"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize"
            android:text="投标截止日期"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:text="2017.10"
            android:id="@+id/endtime" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textviewheight"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize"
            android:text="保函有效期"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:text="10年"
            android:id="@+id/vilidatetime" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize"
            android:text="担保图片"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/ensureimage" />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/lightgray"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <TextView
         android:id="@+id/onlineask"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:text="在线咨询"
         android:gravity="center"
         android:paddingLeft="20dp"
         android:textColor="@color/white"
         android:background="@drawable/range_shape"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="10dp"

         android:layout_height="match_parent"
         android:drawableLeft="@mipmap/online"/>
     <TextView
         android:id="@+id/telephoneask"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:text="电话咨询"
         android:paddingLeft="20dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="20dp"
         android:textColor="@color/white"
         android:gravity="center"
         android:background="@drawable/range_shape"
         android:layout_height="match_parent"
         android:drawableLeft="@mipmap/telephone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/seeblockinfo"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/range_shape"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="查看项目标段信息"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/down"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/projecinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
       <TextView
           android:id="@+id/projectnumber"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:gravity="center"
           android:text="项目编号：12345678"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="标段一"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="公告地址备注"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="标段二"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="公告地址备注"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="标段三"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="公告地址备注"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="标段四"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="公告地址备注"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>